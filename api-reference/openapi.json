"components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Company": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "legal_name": {
            "type": "string"
          },
          "tax_id": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string"
          }
        },
        "required": ["name", "tax_id"]
      },
      "PaymentInfo": {
        "type": "object",
        "properties": {
          "payment_methods": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "details": {
                  "type": "object",
                  "properties": {
                    "account_number": {
                      "type": "string"
                    },
                    "routing_number": {
                      "type": "string"
                    },
                    "bank_name": {
                      "type": "string"
                    },
                    "swift_code": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "Contacts": {
        "type": "object",
        "properties": {
          "contacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "phone": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Document": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "issuer_tax_id": {
            "type": "string"
          },
          "receiver_tax_id": {
            "type": "string"
          },
          "document_type": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          },
          "total": {
            "type": "number"
          },
          "issue_date": {
            "type": "string",
            "format": "date"
          },
          "due_date": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["issuer_tax_id", "receiver_tax_id", "document_type", "total", "issue_date"]
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "number"
          }
        },
        "required": ["name", "price", "quantity"]
      },
      "Transfer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "document_id": {
            "type": "string"
          },
          "receiver_company": {
            "$ref": "#/components/schemas/Company"
